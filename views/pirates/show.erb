<h1>Display your Pirate here</h1>
<div class="pirate">
<p> Name: <%= @pirate.name %> </p>
<p> Weight: <%= @pirate.weight %> lbs </p>
<p> Height: <%= @pirate.height %> cm </p>

<h2>Display your first ship here</h2>
<% @ships.each do |ship| %>
    <div class="ship">
        <h3>Ship</h3>
        <p>Ship Name: <%= ship.name %></p>
        <p>Ship Type: <%= ship.type %></p>
        <p>Ship Booty: <%= ship.booty %></p>
    </div>
<% end %>